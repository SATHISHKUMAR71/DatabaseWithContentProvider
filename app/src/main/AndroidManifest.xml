<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <permission android:name="com.example.databasewithcontentprovider.permission.ACCESS_PROVIDER"
        android:protectionLevel="normal" />
    <permission android:name="com.example.databasewithcontentprovider.permission.WRITE_PROVIDER"
        android:protectionLevel="normal"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DatabaseInAndroid"
        tools:targetApi="31">

        <provider
            android:name=".NotesContentProvider"
            android:authorities="com.example.databasewithcontentprovider.notescontentprovider"
            android:exported="true"
            android:readPermission="com.example.databasewithcontentprovider.permission.ACCESS_PROVIDER"
            android:writePermission="com.example.databasewithcontentprovider.permission.WRITE_PROVIDER"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>